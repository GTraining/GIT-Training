<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".View.FeatureView.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayout">
            <RelativeLayout
                android:background="#11FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <!-- Button back 've removed for Bug id JS_013-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="TODAY"
                    android:textStyle="bold"
                    android:textColor="@color/Dialog_textcolor"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <RelativeLayout
                    android:background="@drawable/background_click_main"
                    android:onClick="onclickOpenSetting"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:background="@drawable/chevron_double_down"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:background="#05000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/Test_layout_vocabulary_onclick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="260dp"
                            android:layout_height="260dp"
                            android:max="43200"
                            android:progress="0"
                            android:id="@+id/progressBar_Hours"
                            android:background="@drawable/circle_shape_hour"
                            android:progressDrawable="@drawable/circular_progress_bar_hours"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:max="3600"
                            android:progress="0"
                            android:id="@+id/progressBar_Minute"
                            android:background="@drawable/circle_shape_minute"
                            android:progressDrawable="@drawable/circular_progress_bar_minute"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                        <RelativeLayout
                            android:background="@drawable/circle_main_clock"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="126dp"
                                android:layout_height="126dp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">
                                        <ProgressBar
                                            style="?android:attr/progressBarStyleHorizontal"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:max="60"
                                            android:progress="0"
                                            android:id="@+id/progressBar_Seconds"
                                            android:background="@drawable/circle_shape_second"
                                            android:progressDrawable="@drawable/circular_progress_bar_second"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:text="00"
                                            android:id="@+id/textView_second"
                                            android:textSize="10dp"
                                            android:textColor="#33000000"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true" />

                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">
                                        <ProgressBar
                                            style="?android:attr/progressBarStyleHorizontal"
                                            android:layout_width="63dp"
                                            android:layout_height="63dp"
                                            android:max="60"
                                            android:progress="0"
                                            android:id="@+id/progressBar_date"
                                            android:background="@drawable/circle_shape_minute"
                                            android:progressDrawable="@drawable/circular_progress_bar_second"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true" />

                                        <RelativeLayout
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true">
                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerVertical="true">

                                                <!-- Change text color for Bug id JS_011-->

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="Jun"
                                                    android:textSize="7dp"
                                                    android:textColor="#FFF"
                                                    android:id="@+id/textView_month"
                                                    android:layout_gravity="center_horizontal" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                                    android:text="09"
                                                    android:textSize="15dp"
                                                    android:textColor="#000"
                                                    android:id="@+id/textView_date"
                                                    android:layout_gravity="center_horizontal" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="2016"
                                                    android:textSize="7dp"
                                                    android:textColor="#FFF"
                                                    android:id="@+id/textView_year"
                                                    android:layout_gravity="center_horizontal" />
                                            </LinearLayout>
                                        </RelativeLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <RelativeLayout
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:background="@drawable/circle_time"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true">
                                        <LinearLayout
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:text="AM"
                                                android:textSize="7dp"
                                                android:textColor="#44000000"
                                                android:id="@+id/textView_Ap"
                                                android:layout_gravity="center_horizontal" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="00:00"
                                                android:layout_margin="5dp"
                                                android:textSize="15dp"
                                                android:textColor="@color/login_main"
                                                android:id="@+id/textView_time"
                                                android:layout_gravity="center_horizontal" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:text="Monday"
                                                android:textSize="7dp"
                                                android:textColor="#44000000"
                                                android:id="@+id/textView_day"
                                                android:layout_gravity="center_horizontal" />
                                        </LinearLayout>
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:layout_marginTop="0.5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <RelativeLayout
                    android:padding="5dp"
                    android:onClick="onclickWeeklyFitness"
                    android:background="@drawable/background_click_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:background="@drawable/circle_feature"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="7dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/human"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Fitness"
                                android:textColor="#885d8497"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="5dp"
                    android:onClick="onclickDailyDiet"
                    android:background="@drawable/background_click_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:background="@drawable/circle_feature"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="7dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/food"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Diet"
                                android:textColor="#885d8497"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="5dp"
                    android:onClick="onclickDailyDrink"
                    android:background="@drawable/background_click_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:background="@drawable/circle_feature"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="7dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/water"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Drink"
                                android:textColor="#885d8497"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0.5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <RelativeLayout
                    android:padding="5dp"
                    android:onClick="onclickCheckBMI"
                    android:background="@drawable/background_click_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:background="@drawable/circle_feature"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="12dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/account_card_details"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check BMI"
                                android:textColor="#885d8497"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="5dp"
                    android:onClick="onclickBMIChart"
                    android:background="@drawable/background_click_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:background="@drawable/circle_feature"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/chart_line"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BMI Chart"
                                android:textColor="#885d8497"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:onClick="onclickStatisticChart"
                    android:padding="5dp"
                    android:background="@drawable/background_click_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:background="@drawable/circle_feature"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="7dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/chart_pie"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Fitness"
                                android:textColor="#885d8497"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
