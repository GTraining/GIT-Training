<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".View.SongDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/activity_song_detail_background"
        android:background="@drawable/bg4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.65">
    </LinearLayout>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/activity_song_detail_image"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Title: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/activity_song_detail_title_txt"
                android:text="example"
                android:textColor="@color/text"
                android:textSize="@dimen/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Artist: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/activity_song_detail_artist_txt"
                android:text="example"
                android:textColor="@color/text"
                android:textSize="@dimen/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Album: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/activity_song_detail_album_txt"
                android:text="example"
                android:textColor="@color/text"
                android:textSize="@dimen/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Author: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/activity_song_detail_author_txt"
                android:text="example"
                android:textColor="@color/text"
                android:textSize="@dimen/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/backgroundmenu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageButton
                android:theme="@style/Button"
                android:id="@+id/activity_song_detail_timer"
                android:padding="10dp"
                android:src="@drawable/timerbutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <ImageButton
                android:theme="@style/Button"
                android:id="@+id/activity_song_detail_shuffle"
                android:padding="10dp"
                android:src="@drawable/shuffledisablebutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <ImageButton
                android:theme="@style/Button"
                android:id="@+id/activity_song_detail_repeat"
                android:padding="10dp"
                android:src="@drawable/repeatbutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/activity_song_detail_current_txt"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:layout_gravity="center"
                android:id="@+id/activity_song_detail_seek"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"/>
            <TextView
                android:id="@+id/activity_song_detail_duration_txt"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="5">
            <ImageButton
                android:theme="@style/Button"
                android:id="@+id/activity_song_detail_previous"
                android:padding="10dp"
                android:src="@drawable/backbutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <ImageButton
                android:theme="@style/Button"
                android:id="@+id/activity_song_detail_backward"
                android:padding="10dp"
                android:src="@drawable/backwardbutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/activity_song_detail_play"
                android:padding="10dp"
                android:src="@drawable/playbutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:theme="@style/Button"/>
            <ImageButton
                android:theme="@style/Button"
                android:id="@+id/activity_song_detail_forward"
                android:padding="10dp"
                android:src="@drawable/forwardbutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <ImageButton
                android:theme="@style/Button"
                android:id="@+id/activity_song_detail_next"
                android:padding="10dp"
                android:src="@drawable/nextbutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
