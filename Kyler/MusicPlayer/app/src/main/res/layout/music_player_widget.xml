<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:weightSum="3"
    android:id="@+id/widget_background"
    android:padding="@dimen/widget_margin">
    <ImageView
        android:background="@android:color/transparent"
        android:id="@+id/widget_image"
        android:src="@drawable/defaultpic"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="3">
        <LinearLayout
            android:alpha="0.3"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0dp">
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/widget_title"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_title"
                    android:text="Music Player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/widget_artist"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    android:text="Designed by Kyler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_height="0dp">
                <ImageButton
                    android:theme="@style/Button_widget"
                    android:id="@+id/widget_previous"
                    android:src="@drawable/widget_previousicon"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:theme="@style/Button_widget"
                    android:id="@+id/widget_play"
                    android:src="@drawable/widget_playicon"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:theme="@style/Button_widget"
                    android:id="@+id/widget_next"
                    android:src="@drawable/widget_nexticon"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>