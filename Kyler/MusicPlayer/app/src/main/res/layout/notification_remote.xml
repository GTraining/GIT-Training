<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView
        android:id="@+id/notification_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src=""/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/notification_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_title"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/notification_artist"
            android:textColor="@color/text"
            android:textSize="@dimen/text_normal"
            android:text="Artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:weightSum="11"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <ImageButton
                android:id="@+id/notification_previous_icon"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/notification_previousicon"
                android:theme="@style/Button_notification"/>
            <ImageButton
                android:id="@+id/notification_play_icon"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/notification_playicon"
                android:theme="@style/Button_notification"/>
            <ImageButton
                android:id="@+id/notification_next_icon"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/notification_nexticon"
                android:theme="@style/Button_notification"/>
            <ImageButton
                android:id="@+id/notification_close_icon"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/notification_closeicon"
                android:theme="@style/Button_notification"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
