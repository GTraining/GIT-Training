<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_small_image"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/notification_small_title"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="@dimen/text_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/notification_small_artist"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textSize="@dimen/text_title"
            android:textColor="@color/text"
            android:text="artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/notification_small_play"
        android:theme="@style/Button_notification"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:src="@drawable/notification_playicon"
        android:layout_height="match_parent"/>
    <ImageButton
        android:id="@+id/notification_small_next"
        android:theme="@style/Button_notification"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:src="@drawable/notification_nexticon"
        android:layout_height="match_parent"/>
</LinearLayout>
